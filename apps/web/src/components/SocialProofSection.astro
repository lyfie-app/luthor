---
const githubRepo = "lyfie-app/luthor";
const npmPackage = "@lyfie/luthor";
const githubUrl = "https://github.com/lyfie-app/luthor";
const npmUrl = "https://www.npmjs.com/package/@lyfie/luthor";
const sponsorUrl = "https://github.com/sponsors/lyfie-app";
const discordUrl = "https://discord.gg/your-discord-link";

const npmBadges = [
  `https://img.shields.io/npm/v/@lyfie/luthor?color=2563eb&label=version&style=for-the-badge`,
  `https://img.shields.io/npm/dw/@lyfie/luthor?color=10b981&label=weekly%20downloads&style=for-the-badge`,
  `https://img.shields.io/bundlephobia/minzip/@lyfie/luthor?color=f59e42&label=gzipped%20size&style=for-the-badge`,
];
const githubBadges = [
  `https://img.shields.io/github/stars/lyfie-app/luthor?color=ffb300&label=GitHub%20stars&style=for-the-badge`,
  `https://img.shields.io/github/forks/lyfie-app/luthor?color=6366f1&label=forks&style=for-the-badge`,
];
---

<section style="display:flex;flex-direction:column;align-items:center;gap:2.5rem;margin:2.5rem 0 2rem 0;">
  <div style="display:flex;flex-wrap:wrap;gap:1rem;justify-content:center;">
    {npmBadges.map(src => <img src={src} alt="npm badge" loading="lazy" style="height:36px;" />)}
    {githubBadges.map(src => <img src={src} alt="github badge" loading="lazy" style="height:36px;" />)}
  </div>
  <div style="display:flex;flex-wrap:wrap;gap:1.5rem;justify-content:center;">
    <a href={githubUrl} target="_blank" rel="noopener" style="font-weight:700;font-size:1.1rem;color:#18181b;text-decoration:none;background:#e2e8f0;padding:10px 22px;border-radius:8px;">GitHub Repo</a>
    <a href={npmUrl} target="_blank" rel="noopener" style="font-weight:700;font-size:1.1rem;color:#fff;background:#2563eb;padding:10px 22px;border-radius:8px;text-decoration:none;">NPM Package</a>
    <a href={sponsorUrl} target="_blank" rel="noopener" style="font-weight:700;font-size:1.1rem;color:#fff;background:#f59e42;padding:10px 22px;border-radius:8px;text-decoration:none;">Sponsor / Donate</a>
    <a href={discordUrl} target="_blank" rel="noopener" style="font-weight:700;font-size:1.1rem;color:#fff;background:#5865f2;padding:10px 22px;border-radius:8px;text-decoration:none;">Discord / Community</a>
  </div>
</section>

<!-- Used by / Testimonials section -->
<section style="max-width:900px;margin:0 auto 3rem auto;padding:2rem 1rem 1rem 1rem;background:#fff;border-radius:14px;box-shadow:0 2px 16px #0001;">
  <h2 style="font-size:1.5rem;font-weight:800;margin-bottom:1.2rem;text-align:center;">Trusted by Developers</h2>
  <blockquote style="font-size:1.1rem;color:#334155;text-align:center;margin:0 auto 1.5rem auto;max-width:700px;">“Luthor is the most flexible, performant, and developer-friendly rich text editor I’ve used. The open source model and MIT license make it a no-brainer for our projects.”<br/><span style="font-size:0.95rem;color:#64748b;">— Community User</span></blockquote>
  <blockquote style="font-size:1.1rem;color:#334155;text-align:center;margin:0 auto 1.5rem auto;max-width:700px;">“Integration was seamless, and the headless API let us build exactly what we needed. Highly recommended!”<br/><span style="font-size:0.95rem;color:#64748b;">— OSS Maintainer</span></blockquote>
</section>
